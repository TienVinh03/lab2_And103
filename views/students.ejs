<!-- views/students.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student List</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    table, th, td {
      border: 1px solid black;
    }
    th, td {
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>
  <h1>Student List</h1>
  <table>
    <tr>
      <th>Student ID</th>
      <th>Name</th>
      <th>Class</th>
      <th>Address</th>
    </tr>
    <% students.forEach(student => { %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.name %></td>
        <td><%= student.class %></td>
        <td><%= student.address %></td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
